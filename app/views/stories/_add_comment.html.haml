.span12{style: "margin-left: 40px;"}
  = simple_form_for(@story_comment, remote: true) do |f|
    = f.input :body, as: :text, input_html: { rows: 4, style: "width: 565px;" }, label: false
    = f.hidden_field :user_id, value: current_user.id
    = f.hidden_field :story_id, value: @story.id
    = f.button :submit, 'Add comment'