.span12{style: "margin-left: 40px;"}
  = simple_form_for(@story_comment, url: story_story_comments_path(@story.id), remote: true) do |f|
    = f.input :body, as: :text, input_html: { rows: 4, style: "width: 565px;" }, label: false
    = f.hidden_field :user_id, value: current_user.id
    = f.button :submit, 'Add comment'