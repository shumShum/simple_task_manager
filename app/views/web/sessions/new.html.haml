.form-page-bg
  .form-page
    .row.span12
      %h3= t('.sign_in_title')
    .row.span12
      = simple_form_for(:session, url: session_path) do |f|
        .span
          = bootstrap_flash
          = f.input :email
          = f.input :password

          = f.button :submit, t('.sign_in_btn')
    .offset1.span2
      = link_to t('.sign_up_link'), new_user_path
